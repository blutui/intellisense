{
	"name": "blutui-intellisense",
	"displayName": "Blutui IntelliSense",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "blutui-intellisense.helloWorld",
				"title": "Hello World"
			}
		],
		"languages": [
			{
				"id": "html",
				"extensions": [
					".html"
				],
				"aliases": [
					"html",
					"HTML"
				],
				"configuration": "language-configuration.json"
			}
		],
		"snippets": [
			{
				"language": "html",
				"path": "./src/snippets/snippets.code-snippets"
			},
			{
				"language": "html",
				"path": "./src/snippets/functions.code-snippets"
			},
			{
				"language": "html",
				"path": "./src/snippets/filters.code-snippets"
			},
			{
				"language": "html",
				"path": "./src/snippets/auto.code-snippets"
			}
		],
		"grammars": [
			{
				"path": "./src/syntaxes/blutui.tmLanguage",
				"language": "html",
				"scopeName": "text.html.twig",
				"embeddedLanguages": {
					"source.json": "json",
					"source.css": "css",
					"source.css.scss": "scss",
					"source.js": "javascript",
					"source.ts": "typescript"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/node-fetch": "^2.5.10",
		"@types/vscode": "^1.55.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"ts-loader": "^8.0.14",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	},
	"dependencies": {
		"bent": "^7.3.12",
		"node-fetch": "^2.6.1",
		"vscode-uri": "^3.0.2"
	}
}
